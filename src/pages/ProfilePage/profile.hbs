<div class="container">
    {{#Button type="button" onClick=handleGoToChatsClick classNames="go-back-bar"}}
        <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="14" cy="14" r="14" transform="rotate(-180 14 14)" fill="#3369F3"/>
            <rect x="20" y="14.8" width="11" height="1.6" transform="rotate(-180 20 14.8)" fill="white"/>
            <path d="M13 19L9 14L13 9" stroke="white" stroke-width="1.6"/>
        </svg>
    {{/Button}}
    <main class="container-center">
        <ul class="profile direction-column">
            <li class="m-b-20">
                {{#Button classNames="avatar-large" type="button"}}
                    <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                              d="M36 2H4C2.89543 2 2 2.89543 2 4V25.2667L14.6547 22.3139C15.5486 22.1053 16.4635 22 17.3814 22H22.6186C23.5365 22 24.4514 22.1053 25.3453 22.3139L38 25.2667V4C38 2.89543 37.1046 2 36 2ZM4 0C1.79086 0 0 1.79086 0 4V36C0 38.2091 1.79086 40 4 40H36C38.2091 40 40 38.2091 40 36V4C40 1.79086 38.2091 0 36 0H4ZM10.9091 14.5455C12.9174 14.5455 14.5455 12.9174 14.5455 10.9091C14.5455 8.90079 12.9174 7.27273 10.9091 7.27273C8.90082 7.27273 7.27276 8.90079 7.27276 10.9091C7.27276 12.9174 8.90082 14.5455 10.9091 14.5455Z"
                              fill="currentColor"/>
                    </svg>
                {{/Button}}
            </li>
            {{#NavLink classNames="profile-name" label=first_name}}
                {{data.first_name}}
            {{/NavLink}}
            {{#NavLink classNames=classNames}}
                {{{ProfileRow label='Почта' information=data.email}}}
                {{{ProfileRow label='Логин' information=data.login}}}
                {{{ProfileRow label='Имя' information=data.first_name}}}
                {{{ProfileRow label='Фамилия' information=data.second_name}}}
                {{{ProfileRow label='Имя в чате' information=data.display_name}}}
                {{{ProfileRow label='Телефон' information=data.phone}}}
            {{/NavLink}}
            {{#NavLink classNames="row"}}
                {{#Button classNames="button-passive" type="button" onClick=handleChangeProfileDataClick}}
                    Изменить данные
                {{/Button}}
            {{/NavLink}}
            {{#NavLink classNames="row"}}
                {{#Button classNames="button-passive" type="button" onClick=handleChangePasswordClick}}
                    Изменить пароль
                {{/Button}}
            {{/NavLink}}
            {{#NavLink classNames="row"}}
                {{#Button classNames="button-passive warning" type="button" onClick=handleGoAwayClick}}
                    Выйти
                {{/Button}}
            {{/NavLink}}
        </ul>
    </main>
    {{#if isLoading}}
        {{{Loader}}}
    {{/if}}
</div>


