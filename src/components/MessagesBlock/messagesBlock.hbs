<section class="messages-container direction-column">
    {{#each messages}}
        {{{Message
                chat_id=chat_id
                content=content
                file=file
                id=id
                is_read=id
                time=time
                type=type
                user_id=user_id
                isOwnMessage=isOwnMessage
        }}}
    {{else}}
        <p class="empty">Здесь пока никто ничего не написал</p>
    {{/each}}
</section>
