<li class="{{classNames}} {{#if active}}active{{/if}}" id="{{id}}">
    <div>
        <div class="avatar-middle"></div>
    </div>
    <div class="user-container">
                    <span class="user-name">
                        {{name}}
                    </span>
        <span class="last-message">
            {{text}}
        </span>
    </div>
    <div class="information-message direction-column">
                    <span class="time">
                        {{time}}
                    </span>
        {{#if unreadMessagesCount includeZero=false}}
            <div class="widget">
                {{unreadMessagesCount}}
            </div>
        {{/if}}
    </div>
</li>
